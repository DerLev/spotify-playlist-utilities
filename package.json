{
  "name": "spotify-playlist-utilities",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "concurrently -k -c blue,magenta,green -n tsc,esl,nm -i --default-input-target 2 yarn:server:tsc:watch yarn:server:esl:watch yarn:server:nodemon",
    "build:client": "tsc && vite build",
    "build:server": "webpack",
    "start:server": "node dist-server/server.js",
    "server:nodemon": "nodemon -x \"node --experimental-specifier-resolution=node\"  --watch build-server build-server/server/server.js --dev=true",
    "server:tsc": "tsc --project tsconfig.server.json --noEmit",
    "server:tsc:watch": "tsc --project tsconfig.server.json -w",
    "server:esl": "eslint . --ext .ts --config .eslintrc.server.json --ignore-path .eslintignore.server",
    "server:esl:watch": "esw -w . --ext .ts --config .eslintrc.server.json --ignore-path .eslintignore.server",
    "client:tsc": "tsc",
    "client:esl": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@mantine/core": "^6.0.5",
    "@mantine/form": "^6.0.5",
    "@mantine/hooks": "^6.0.5",
    "@mantine/modals": "^6.0.5",
    "@mantine/notifications": "^6.0.5",
    "@mantine/nprogress": "^6.0.5",
    "@types/express": "^4.17.17",
    "express": "^4.18.2",
    "kolorist": "^1.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.10.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react-swc": "^3.2.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-watch": "^8.0.0",
    "nodemon": "^2.0.22",
    "ts-loader": "^9.4.2",
    "tsc": "^2.0.4",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.0.7",
    "webpack": "^5.77.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1"
  }
}
